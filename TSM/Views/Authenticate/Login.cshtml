@model TSM.Models.MedlemDetail

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Me_Email" class="control-label">Email</label>
                <input asp-for="Me_Email" class="form-control" />
                <span asp-validation-for="Me_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Me_Password" class="control-label">Password</label>
                <input asp-for="Me_Password" class="form-control" />
                <span asp-validation-for="Me_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Logga in" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="register">Registera dig</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
