
@{
    ViewData["Title"] = "Chat";
}

<div class="border-bottom">
    <nav class="navbar navbar-expand-md navbar-light ">
        <a href="javascript:void(0);" onclick="history.go(-1);">
            <img src="~/Images/arrow_back_ios_new_black_24dp.svg" width="30" height="30" class="d-inline-block align-top" loading="lazy" />
        </a>
        <h2 class="px-2">@ViewData["Title"]</h2>
        <div class="navbar-nav ml-auto">
            <a asp-area="" asp-controller="Home" asp-action="Settings">
                <button type="button" class="btn btn-light btn-sm">
                    <img src="~/Images/settings_black_24dp.svg" width="30" height="30" class="d-inline-block" loading="lazy" />
                </button>
            </a>
        </div>
    </nav>
</div>

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="userInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>